            aria-label="<?php echo $escape($this->translate('Make public')); ?>"
            title="<?php echo $escape($this->translate('Make public')); ?>">
            </a>
            <input type="hidden" name="o:media[<?php echo $i; ?>][o:is_public]" value="0">
            <?php endif; ?>
            </li>
